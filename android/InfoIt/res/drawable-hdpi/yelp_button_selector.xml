<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="#960000"
            android:endColor="#750000"
            android:type="linear" />
    </shape>
</item>
<item android:state_pressed="false">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="#AD0000"
            android:endColor="#C74040"
            android:type="linear" />
    </shape>
</item>
</selector>