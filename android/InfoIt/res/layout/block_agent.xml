<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agent_details_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:background="@drawable/ui_container"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/agent_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/agent_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tami" />

        <LinearLayout
            android:id="@+id/agent_detail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tami Chiu"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agent_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agent at Coldwell Banker"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/agent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(650)-403-6221"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/agent_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2.0" >

        <ImageView
            android:id="@+id/contact_agent_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/ui_contact_agent_button" />

        <ImageView
            android:id="@+id/agent_details_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/ui_agent_details_button" />
    </LinearLayout>

</LinearLayout>