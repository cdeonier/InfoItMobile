<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basic_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/basic_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/basic_photo_filler"/>
        
        <LinearLayout
            android:id="@+id/photos_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20dip"
            android:background="#88000000" >

            <TextView
                android:id="@+id/photo_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:text="Photos"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/photos_icon"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center"
                android:src="@drawable/ui_photos_icon" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/basic_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:text="855 Spruance Lane"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/basic_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:text="No Description Available"
        android:textColor="#666666"
        android:textSize="13sp" />
    
    <LinearLayout
        android:id="@+id/basic_bookmark_button"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_margin="10dip"
        android:orientation="horizontal"
        android:background="@drawable/basic_bookmark_button">
        
            <ImageView
                android:id="@+id/basic_bookmark_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:src="@drawable/bookmark_unbookmark_icon" />

            <TextView
                android:id="@+id/basic_bookmark_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="Bookmark this place"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>