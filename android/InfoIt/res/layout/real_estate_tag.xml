<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:background="@drawable/backrepeat"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/real_estate_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible" >
        
        <LinearLayout
            android:id="@+id/menu_bar"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:background="@drawable/menu_bar_selector">
            
            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:padding="5dip"
                android:src="@drawable/list_icon"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0" >
			
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:padding="5dip"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/header_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Name"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/location_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/location_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specs"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/location_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>
        
        <HorizontalScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="110px"
            android:paddingTop="5px"
            android:paddingBottom="5px" >

            <LinearLayout
                android:id="@+id/gallery_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </LinearLayout>
        </HorizontalScrollView>
        
		<FrameLayout
            android:id="@+id/summary_container"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:layout_weight="1">
        </FrameLayout>
        
        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dip"
            android:weightSum="1.0" >

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:adjustViewBounds="true"
                android:padding="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/maps_icon" />

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/address_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address One"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <TextView
                    android:id="@+id/address_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Two"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <LinearLayout
                    android:id="@+id/city_state_zip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ST"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/zip_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZIP"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0">
            
            <LinearLayout
                android:id="@+id/floorplan_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="2dip" >

                <ImageView
                    android:id="@+id/floorplan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/floorplan" />

                <TextView
                    android:id="@+id/floorplan_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:text="Floorplan"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="2dip" >

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/contact" />

                <TextView
                    android:id="@+id/contact_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:text="Contact"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/agent_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="2dip" >

                <ImageView
                    android:id="@+id/agent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/agent" />

                <TextView
                    android:id="@+id/agent_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:text="Agent"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="2dip" >

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/share" />

                <TextView
                    android:id="@+id/share_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:text="Share"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>

</FrameLayout>